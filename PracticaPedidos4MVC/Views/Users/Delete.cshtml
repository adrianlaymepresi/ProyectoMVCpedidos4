@model PracticaPedidos4MVC.Models.UserModel

@{
    ViewData["Title"] = "Eliminar Usuario";
    bool forbidSelf = (ViewBag.ForbiddenSelfDelete as bool?) ?? false;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0 text-light">ELIMINAR USUARIO</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-sm btn-outline-secondary" asp-action="Index">↩️ Volver</a>
        </div>
    </div>

    <div class="card p-3 card-tabla">

        @if (forbidSelf)
        {
            <div class="mb-3 alert alert-danger" role="alert">
                No puedes eliminar <strong>tu propia cuenta</strong>.
            </div>
        }
        else
        {
            <div class="mb-3 alert alert-warning" role="alert">
                Esta acción es <strong>permanente</strong>. El usuario no podrá recuperarse.
            </div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center mb-3">
                <thead>
                    <tr>
                        <th class="text-white">@Html.DisplayNameFor(m => m.Nombre)</th>
                        <th class="text-white">@Html.DisplayNameFor(m => m.Email)</th>
                        <th class="text-white">@Html.DisplayNameFor(m => m.Password)</th>
                        <th class="text-white">@Html.DisplayNameFor(m => m.Rol)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-white">@Model.Nombre</td>
                        <td class="text-white">@Model.Email</td>
                        <td class="text-white">••••••••</td>
                        <td class="text-white">@Model.Rol</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center gap-2">
            <a class="btn btn-outline-secondary" asp-action="Index">Cerrar</a>

            @if (!forbidSelf)
            {
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalConfirmarEliminar">
                    🗑️ Eliminar Usuario
                </button>
            }
        </div>
    </div>
</div>

@if (!forbidSelf)
{
    <!-- Modal Confirmación -->
    <div class="modal fade" id="modalConfirmarEliminar" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="background:#0f1113; color:#f8f9fa; border:1px solid #2b2f33;">
                <div class="modal-header" style="background: linear-gradient(90deg, #2c3e50, #6c5ce7);">
                    <h5 class="modal-title">Confirmar eliminación</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Seguro que deseas eliminar al usuario <strong>@Model.Nombre</strong>?
                    Esta acción es permanente y no podrás recuperar la información.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>

                    <!-- Formulario real de eliminación -->
                    <form asp-action="Delete" method="post" class="m-0">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Eliminar definitivamente</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts { }
