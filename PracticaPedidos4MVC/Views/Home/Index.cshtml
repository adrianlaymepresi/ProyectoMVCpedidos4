@model PracticaPedidos4MVC.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar sesión";
    Layout = "_LayoutPublic";
}

<div class="login-wrapper">
    <div class="container" style="max-width: 480px;">
        <div class="card card-login p-4">
            <div class="text-center mb-3">
                <div class="fs-1">🔐</div>
                <h1 class="h4 fw-bold mt-2 mb-0">Acceso al sistema</h1>
                <p class="text-white-50 mb-0">Ingresa con tu email o usuario</p>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <ul class="nav nav-pills justify-content-center mb-3" id="loginTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="tab-email" data-bs-toggle="tab" data-bs-target="#panel-email" type="button" role="tab">✉️ Email</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="tab-usuario" data-bs-toggle="tab" data-bs-target="#panel-usuario" type="button" role="tab">👤 Usuario</button>
                </li>
            </ul>

            <form asp-action="Index" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="tab-content mb-3">
                    <div class="tab-pane fade show active" id="panel-email" role="tabpanel" aria-labelledby="tab-email">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">✉️</span>
                                <input asp-for="Email" class="form-control" type="email" placeholder="ej: usuario@correo.com" autocomplete="email">
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="panel-usuario" role="tabpanel" aria-labelledby="tab-usuario">
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">👤</span>
                                <input asp-for="Nombre" class="form-control" type="text" placeholder="ej: juan.perez" autocomplete="username">
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text">🔒</span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" autocomplete="current-password" required>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold">
                    Ingresar ⮕
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
